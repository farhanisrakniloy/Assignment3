<%- include('partials/_header') %>
<main>
  <div class="container mt-5">
    <h1 class="text-center">Library</h1>
    <div class="row">
      <% if (books && books.length > 0) { %>
        <% books.forEach(book => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="<%= book.coverImagePath %>" class="card-img-top" alt="<%= book.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><strong>Author:</strong> <%= book.author %></p>
                <p class="card-text"><strong>Genre:</strong> <%= book.genre %></p>
                <p class="card-text"><strong>Publication Year:</strong> <%= book.publish_year %></p>
                <p class="card-text"><%= book.description %></p>
                <a href="/books/<%= book._id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <p class="text-center">No books available in the library.</p>
        </div>
      <% } %>
    </div>
  </div>
</main>
<%- include('partials/_footer') %>