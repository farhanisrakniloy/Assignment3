<%- include('partials/_header') %>
<main>
  <div class="container mt-5">
    <h1 class="text-center">Books</h1>
    <div class="row">
      <% if (books && books.length > 0) { %>
        <% books.forEach(book => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="<%= book.coverImagePath %>" class="card-img-top cover-img" alt="<%= book.title %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><strong>Author:</strong> <%= book.author %></p>
                <p class="card-text"><strong>Genre:</strong> <%= book.genre %></p>
                <p class="card-text"><strong>Publication Year:</strong> <%= book.publish_year %></p>
                <p class="card-text"><%= book.description %></p>
                <a href="/books/<%= book._id %>" class="btn btn-primary mt-auto">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <p class="text-center">No books available in the library.</p>
        </div>
      <% } %>
    </div>
    <div class="row mt-5">
      <div class="col-md-6 offset-md-3">
        <h2 class="text-center">Add a New Book</h2>
        <form action="/books/add" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" required>
          </div>
          <div class="mb-3">
            <label for="author" class="form-label">Author</label>
            <input type="text" class="form-control" id="author" name="author" required>
          </div>
          <div class="mb-3">
            <label for="publishedDate" class="form-label">Published Date</label>
            <input type="date" class="form-control" id="publishedDate" name="publishedDate" required>
          </div>
          <div class="mb-3">
            <label for="genre" class="form-label">Genre</label>
            <input type="text" class="form-control" id="genre" name="genre" required>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
          </div>
          <div class="mb-3">
            <label for="coverImagePath" class="form-label">Cover Image URL</label>
            <input type="text" class="form-control" id="coverImagePath" name="coverImagePath" required>
          </div>
          <button type="submit" class="btn btn-primary">Add Book</button>
        </form>
      </div>
    </div>
  </div>
</main>
<%- include('partials/_footer') %>